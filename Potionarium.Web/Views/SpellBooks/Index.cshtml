@model Potionarium.Domain.DTO.SpellBookDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>


<div class="container">
    <div class="row" style="margin-top:20px;">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Spell Name</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.SpellsInSpellBook.Count; i++)
                {
                    var currentPotion = Model.SpellsInSpellBook[i];

                    <tr>
                        <td>@(i + 1)</td>
                        <td>@currentPotion.Spell.Name</td>
                        <td>
                            <a asp-controller="SpellBooks" asp-action="RemoveFromSpellBook" asp-route-id="@currentPotion.SpellId" class="btn btn-danger">Delete from cart</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
