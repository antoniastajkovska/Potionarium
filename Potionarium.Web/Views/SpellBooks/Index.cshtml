@model Potionarium.Domain.DTO.SpellBookDto
@{
    ViewData["Title"] = "Spell Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="spellbook-index-container" style="background-color: #1a103d; min-height: 100vh; padding: 2rem;">
    <div class="container" style="max-width: 900px;">
        <div class="index-header mb-4">
            <h1 style="color: #b38cf7; font-family: 'Cinzel', serif;">
                <i class="fas fa-book"></i> My Spell Book
            </h1>
            <hr style="border-color: #4a357a;" />
        </div>

        @if (Model.SpellsInSpellBook.Count == 0)
        {
            <p style="color: #e0d6ff;">Your spell book is empty. Add some spells to get started!</p>
        }
        else
        {
            <div id="spellCards" class="row g-4 mb-4">
                @foreach (var spellEntry in Model.SpellsInSpellBook)
                {
                    <div class="col-md-6 spell-card-wrapper">
                        <div class="spell-card" style="background: linear-gradient(145deg, #2a1b5e 0%, #3d2a7a 100%);
                                        border-radius: 10px; padding: 1.5rem; border: 1px solid #4a357a;
                                        box-shadow: 0 4px 15px rgba(0,0,0,0.3); transition: all 0.3s ease;">
                            <div class="spell-card-header mb-2">
                                <h3 style="color: #d4c4ff; font-family: 'Cinzel', serif;">
                                    <i class="fas fa-star"></i> @spellEntry.Spell.Name
                                </h3>
                                <span class="badge" style="background-color: #946b2d; color: white; font-size: 0.9rem;">
                                    @spellEntry.Spell.Category
                                </span>
                            </div>
                            <p style="color: #e0d6ff; font-size: 0.95rem; min-height: 40px;">
                                <strong>Effect:</strong> @spellEntry.Spell.Effect
                            </p>
                            <div class="mt-3 text-end">
                                <a asp-controller="SpellBooks" asp-action="RemoveFromSpellBook" asp-route-id="@spellEntry.SpellId"
                                   class="btn" style="background-color: #d9534f; color: white;">
                                    <i class="fas fa-trash-alt"></i> Remove
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="d-flex justify-content-end mt-4">
                <form asp-action="LearnAll" method="post">
                    <button type="submit" class="btn"
                            style="background-color: #8a6ae1; color: white;">
                        <i class="fas fa-star"></i> Learn All Spells
                    </button>
                </form>
            </div>

        }
    </div>
</div>

@if (TempData["LearnedAll"] != null)
{
    <div class="modal fade" id="learnedModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content" style="background:#2a1b5e; color:#e0d6ff; border-radius:12px;">
                <div class="modal-header border-0">
                    <h5 class="modal-title">
                        Spells Learned!
                    </h5>
                </div>
                <div class="modal-body text-center">
                    <p>You have successfully learned all spells in your spell book.</p>
                    <i class="fas fa-hat-wizard fa-3x" style="color:#b38cf7;"></i>
                </div>
                <div class="modal-footer border-0 justify-content-center">
                    <button type="button" class="btn" data-bs-dismiss="modal"
                            style="background-color:#8a6ae1; color:white;">
                        Awesome!
                    </button>
                </div>
            </div>
        </div>
    </div>
}


@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var modalElement = document.getElementById('learnedModal');
            if (modalElement) {
                var modal = new bootstrap.Modal(modalElement);
                modal.show();
            }
        });
    </script>

    <style>
        .spell-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 25px rgba(138, 106, 225, 0.3);
            border-color: #8a6ae1;
        }

        .btn {
            transition: all 0.3s ease;
            border: none;
            padding: 0.5rem 1rem;
            font-weight: 500;
        }

            .btn:hover {
                filter: brightness(1.1);
                transform: translateY(-1px);
            }

        .badge {
            padding: 0.3rem 0.6rem;
            font-weight: 500;
        }
    </style>
}

